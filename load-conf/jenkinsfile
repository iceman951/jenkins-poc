import groovy.yaml.YamlSlurper

// def envConfig = readFile("${WORKSPACE}/load-conf/env.conf")

// def envConfigFilePath = '/path/to/your/repository/load-conf/env.conf'
// def envConfig = new File(envConfigFilePath).text
def config
node {
    def workspacePath = env.WORKSPACE
    echo "Current workspace: ${workspacePath}"
    // def configFileContent = readFile("${workspacePath}/config.yaml")
    config = new YamlSlurper().parseText("${workspacePath}/config.yaml")
    // You can now use 'workspacePath' to construct file paths within the workspace
}

pipeline {
    agent any
    stages {
        stage ('test1') {
            steps {
                echo "${config}"
                // echo "${conf}"
                // echo "${conf.text}"
            }
        }
        stage ('test2') {
            steps {
                echo 'test2'
            }
        }
    }
}